{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "target": "ES2017",
        "jsx": "react",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "react": ["src/alias/react.js"],
            "react-dom": ["src/alias/react-dom.js"],
        }
    },
    "exclude": [
        "./js/**",
        "./webpack.config.js",
        "./dist/**",
        "./prod.config.js",
        "./docs"
    ]
}